# Weibo Search Crawler Environment Configuration

# Redis
WEIBO_REDIS_URL=redis://localhost:6379/0

# Proxy (no auth required for local proxy)
WEIBO_PROXY_HOST=localhost
WEIBO_PROXY_PORT=18080
# WEIBO_PROXY_USER=your_username  # Optional: for authenticated proxies
# WEIBO_PROXY_PASS=your_password  # Optional: for authenticated proxies

# Cookie Pool
WEIBO_COOKIE_POOL_SIZE=10
WEIBO_COOKIE_TTL=3600
WEIBO_COOKIE_REFRESH_INTERVAL=1800

# Search
WEIBO_MAX_PAGES=10
WEIBO_MAX_RETRIES=3
WEIBO_SEARCH_CONCURRENCY=150

# Output
WEIBO_LOG_DIR=logs
